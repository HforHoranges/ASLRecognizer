<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context="hforh.oranges.aslrecognizer.EditTextActivity">

    <EditText
        android:id="@+id/textBox"
        android:textColorHighlight="@color/otherAccentColor"
        android:textColor="@color/otherAccentColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="181dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/doneEditBox"
        android:layout_width="wrap_content"
        android:shadowColor="@color/otherAccentColor"
        android:textColor="@color/otherAccentColor"
        android:textColorHighlight="@color/otherAccentColor"
        android:textColorLink="@color/otherAccentColor"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:text="CheckBox"
        android:onClick="onCheckboxClicked"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textBox" />

</android.support.constraint.ConstraintLayout>
